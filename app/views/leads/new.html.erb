

<div id="app">
    <div class="main-wrapper">

      <%= render "dashboard/header" %>
      <%= render "dashboard/navbar" %>

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>Start New Lead</h1>
          </div>
          <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
              <div class="card card-primary">
                <div class="card-header"><h4>New Lead</h4></div>

                <div class="card-body">
                  <%= form_with model: @lead do |f| %>
                    <div class="row">
                      <div class="form-group col-12">
                        <label for="first_name">Project Name</label>
                        <%= f.text_field :project_name, class: "form-control", required: "true", type: "text", autocomplete: "off", autofocus: "true["%>
                      </div>
                    </div>

                    <div class="row">

                      <div class="form-group col-4">
                        <label for="email">Client Name</label>
                        <%= f.text_field :client_name, class: "form-control", required: "true", type: "text", autocomplete: "off"%>
                        <div class="invalid-feedback">
                        </div>
                      </div>

                      <div class="form-group col-4">
                        <label for="email">Client Email</label>
                        <%= f.text_field :client_email, class: "form-control", required: "true", type: "email", autocomplete: "off"%>
                        <div class="invalid-feedback">
                        </div>
                      </div>

                      <div class="form-group col-4">
                        <label for="email">Client Contact</label>
                        <%= f.text_field :client_contact, class: "form-control", required: "true", type: "text", autocomplete: "off"%>
                        <div class="invalid-feedback">
                        </div>
                      </div>

                      <div class="form-group col-12">
                        <label for="email">Client Address</label>
                        <%= f.text_area :client_contact, class: "form-control", required: "true", autocomplete: "off", size: "1x5"%>
                        <div class="invalid-feedback">
                        </div>
                      </div>

                    </div>

                    <%= f.hidden_field :status, value: "Not Started" %>

                    <div class="row">
                      <div class="form-group col-12">
                        <label for="password" class="d-block">Platform</label>
                        <%= f.text_field :platform, class: "form-control", required: "true"%>
                        <div id="pwindicator" class="pwindicator">
                          <div class="bar"></div>
                          <div class="label"></div>
                        </div>
                      </div>
                    </div>

                    <%= f.hidden_field :user_id, value: current_user.id %>

                    <div class="form-group">
                      <%= f.submit class: "btn btn-primary btn-lg btn-block"%>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <%= render "dashboard/footer" %>

    </div>
</div>