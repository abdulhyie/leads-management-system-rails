
<div id="app">
  <section class="section">
    <div class="container mt-5">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
          <div class="login-brand">
          </div>

          <div class="card card-primary">
            <div class="card-header"><h4>Accept or Decline</h4></div>

            <div class="card-body">
              <p> <%= @phase.lead.user.name %> <b>(BD)</b> has assigned you a phase for <%= @phase.lead.project_name %>.</p>
              <%= form_with model: @phase, url: set_phase_status_phase_path(@phase) do |f| %>
                <div class="form-group">
                  <%= f.label :manager_comment %><br />
                  <%= f.text_area(:manager_comment, autofocus: true, class: "form-control", id: "summernote") %>
                </div>

                <div class="form-group">
                  <label class="form-label">Action</label>
                  <div class="selectgroup w-100">
                    <label class="selectgroup-item">
                      <input type="radio" name="phase[phase_status]" value="Ongoing" class="selectgroup-input" checked="">
                      <span class="selectgroup-button">Accept</span>
                    </label>
                    <label class="selectgroup-item">
                      <input type="radio" name="phase[phase_status]" value="Declined by Manager" class="selectgroup-input">
                      <span class="selectgroup-button">Decline</span>
                    </label>
                  </div>
                </div>

                <div class="form-group actions">
                  <%= f.submit "Submit", class: "btn btn-primary btn-lg btn-block" %>
                </div>
              <% end %>

            </div>
          </div>
          <div class="simple-footer">
            Copyright &copy; DEVSINC 2021
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
