

<div id="app">
    <div class="main-wrapper">

      <%= render "dashboard/header" %>
      <%= render "dashboard/navbar" %>

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            <h1>Assign Roles</h1>
          </div>
          <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
              <div class="card card-primary">
                <div class="card-header"><h4>Assign Role to User</h4></div>

                <div class="card-body">
                  <%= form_with model: @user_role, url: "create_role" do |f| %>
                    
                    <div class="row">
                      <div class="form-group col-6">
                        <label>User</label>
                        <%= f.select :user_id, @users.map { |u| [u.email, u.id]}, {}, class: "form-control" %>
                      </div>
                      <div class="form-group col-6">
                        <label>Roles</label>
                        <%= f.select :role_id, @roles.map { |r| [r.role_name, r.id]}, {}, class: "form-control" %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= f.submit class: "btn btn-primary btn-lg btn-block"%>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <%= render "dashboard/footer" %>

    </div>
</div>